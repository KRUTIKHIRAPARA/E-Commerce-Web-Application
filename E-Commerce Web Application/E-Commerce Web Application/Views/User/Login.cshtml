@{
    ViewData["Title"] = "Login";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<div class="container mt-5" style="max-width:420px;">
    <h3 class="text-center mb-4">Sign in</h3>
    <form asp-action="Login" asp-controller="User" method="post" class="card p-4 shadow-sm">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3">
            <label class="form-label">Email</label>
            <input name="email" class="form-control" placeholder="name@example.com" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Password</label>
            <input name="password" type="password" class="form-control" placeholder="••••••••" required />
        </div>
        <button class="btn btn-primary w-100">Login</button>
        <p class="text-center mt-3 mb-0">
            New here? <a asp-action="Register" asp-controller="User">Create an account</a>
        </p>
    </form>
</div>
