@model IEnumerable<E_Commerce_Web_Application.Models.User>

@{
    ViewData["Title"] = "All Users";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>UserId</th>
            <th>UserName</th>
            <th>Email</th>
            <th>Role</th>
            <th>IsSeller</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserId</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@(user.Role)</td>
                <td>@(user.Role == "Seller" ? "Yes" : "No")</td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Product" asp-action="Index" class="btn btn-secondary">Back to List</a>
